<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huihui"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hongse"
        >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sw"
                android:background="@drawable/fh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bai"
                android:textSize="20dp"
                android:text="我的余额"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bs"
        android:background="@color/bai"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ss"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额:"/>
            <TextView
                android:layout_marginLeft="@dimen/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:background="@color/huihui"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_amount_entered"
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入提现金额"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ss"
        android:gravity="center_vertical">
        <TextView
            android:layout_marginLeft="@dimen/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择退款账户"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/bai"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_marginLeft="@dimen/ws"
                android:layout_width="20dp"
                android:layout_height="@dimen/es"
                android:background="@drawable/y"
                />
            <TextView
                android:layout_marginLeft="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/qianhei"
                android:text="支付宝账户"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
          <ImageView
              android:id="@+id/iv_bank_card"
              android:layout_width="@dimen/es"
              android:layout_height="@dimen/es"
              android:background="@drawable/y"/>
            <TextView
                android:layout_marginLeft="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/qianhei"
                android:text="银行卡账户"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/yb"
        android:background="@color/bai"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:gravity="center_vertical"
            android:background="@color/huihui">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入姓名"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:background="@color/huihui"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入提现账号"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:gravity="center_vertical"
        android:background="@color/bai">
        <TextView
            android:layout_marginLeft="@dimen/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qianhei"
            android:textSize="@dimen/sw"
            android:text="3—5个工作日内返回选择账号中"/>
    </LinearLayout>

    <Button
        android:id="@+id/but_withdraw"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginTop="@dimen/es"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_cerise"
        android:textColor="@color/bai"
        android:textSize="@dimen/es"
        android:text="确认提现"/>
</LinearLayout>
