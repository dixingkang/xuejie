<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/huihui">
    <RelativeLayout
        android:layout_marginTop="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ss"
        android:background="@color/bai">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hongse"
                android:text="剩余支付时间"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hongse"
                android:text="00:29:24"/>
        </LinearLayout>
        <TextView
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/hongse"
            android:text="待付款"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huihui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bs"
        android:background="@color/bai"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="@dimen/forty"
                android:layout_height="@dimen/forty"
                android:background="@drawable/wd_fb"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巧乐兹雪糕经典巧脆棒"/>
            <LinearLayout
                android:layout_marginTop="@dimen/es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/tv_at"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text="3.5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="@dimen/sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hongse"
                android:textSize="@dimen/sw"
                android:text="×"/>
            <TextView
                android:id="@+id/tv_sum"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginTop="@dimen/sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hongse"
                android:textSize="@dimen/sw"
                android:text="5"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huihui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ss"
        android:gravity="center"
        android:background="@color/bai">
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部商品"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huihui"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ls"
        android:background="@color/bai"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/es"
            >
            <TextView
                android:id="@+id/tv_money"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hongse"
                android:text="16.00"/>
            <TextView
                android:id="@+id/tv"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hongse"
                android:text="¥"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv"
                android:layout_marginRight="@dimen/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付："/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but_pay"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sw"
                android:layout_width="70dp"
                android:layout_height="@dimen/ss"
                android:background="@drawable/sum_btton"
                android:textColor="@color/bai"
                android:text="去支付"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
