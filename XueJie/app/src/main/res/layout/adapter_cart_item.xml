<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/huihui"
              android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bai"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/rb_select"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten"
            android:background="@drawable/y"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:id="@+id/iv_img"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/five"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/cz"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="@dimen/sw"
                android:layout_marginLeft="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/es"
                android:text="巧乐兹雪糕经典巧脆棒"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:textSize="@dimen/sw"
                    android:text="￥"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_toRightOf="@+id/tv_money"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text="10.50"/>
                <ImageView
                    android:id="@+id/iv_reduce"
                    android:layout_toLeftOf="@+id/tv_quantity"
                    android:layout_marginRight="@dimen/sw"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/esw"
                    android:layout_height="@dimen/esw"
                    android:background="@drawable/js"/>
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sw"
                    android:layout_toLeftOf="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:textSize="25dp"
                    android:text="2"/>
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/xxiao"
                    android:background="@drawable/tj"
                    android:layout_width="@dimen/esw"
                    android:layout_height="@dimen/esw" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
