<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/haishihui"
              android:gravity="center"
                >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/btton"
        android:layout_marginRight="@dimen/es"
        android:layout_marginLeft="@dimen/es"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/es"
            android:textColor="@color/black"
            android:text="温馨提示"/>
        <TextView
            android:layout_marginTop="@dimen/esw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sw"
            android:textColor="@color/black"
            android:text="您确定要删除该地址吗"/>
        <Button
            android:layout_marginLeft="@dimen/es"
            android:layout_marginRight="@dimen/es"
            android:layout_marginTop="@dimen/es"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws"
            android:background="@drawable/btton"
            android:textSize="@dimen/es"
            android:textColor="@color/black"
            android:text="取消"/>
        <Button
            android:layout_marginRight="@dimen/es"
            android:layout_marginLeft="@dimen/es"
            android:layout_marginTop="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws"
            android:background="@drawable/sum_btton"
            android:textSize="@dimen/es"
            android:textColor="@color/bai"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>
