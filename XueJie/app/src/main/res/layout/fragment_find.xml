<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white"
                android:orientation="vertical">

    <com.dafen.xuejie.view.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_ber"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <com.dafen.xuejie.view.FlyBanner
                android:id="@+id/bannerTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:points_position="RIGHT" />
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/yb"
                android:background="@color/haishihui"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:background="@color/bai"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/cz"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/bai"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/js"
                        android:layout_height="@dimen/js"
                        android:background="@drawable/cz" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:background="@color/bai"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/js"
                        android:layout_height="@dimen/js"
                        android:background="@drawable/cz" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:gravity="center"
                android:text="今日推荐"
                android:textColor="@color/black"
                android:textSize="@dimen/es" />

            <com.dafen.xuejie.view.MyList
                android:id="@+id/lv_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai" />
        </LinearLayout>
    </com.dafen.xuejie.view.MyScrollView>

    <RelativeLayout
        android:id="@+id/rel_baare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws"
        >
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/es"
            android:text="发现"
            android:textColor="@android:color/transparent"/>
    </RelativeLayout>
</RelativeLayout>
