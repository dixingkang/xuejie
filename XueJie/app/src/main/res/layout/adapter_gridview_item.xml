<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
  <LinearLayout
      android:layout_marginLeft="@dimen/five"
      android:layout_marginRight="@dimen/five"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">
      <LinearLayout
          android:layout_width="@dimen/ybs"
          android:layout_height="@dimen/ybs"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/iv_picture"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/ten"
              android:layout_width="@dimen/bs"
              android:layout_height="@dimen/bs"
              android:background="@drawable/cz"/>
          <TextView
              android:id="@+id/tv_title"
              android:layout_marginTop="@dimen/five"
              android:layout_marginLeft="@dimen/esw"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="南非橙子"/>
          <RelativeLayout
              android:layout_marginLeft="@dimen/esw"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:id="@+id/tv"
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/hongse"
                  android:text="¥"/>
              <TextView
                  android:id="@+id/tv_price"
                  android:layout_toRightOf="@+id/tv"
                  android:layout_marginLeft="@dimen/five"
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/hongse"
                  android:textSize="@dimen/esw"
                  android:text="8"/>
              <ImageView
                  android:id="@+id/iv_add"
                  android:layout_marginRight="@dimen/five"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:background="@drawable/tj"/>
          </RelativeLayout>
      </LinearLayout>
  </LinearLayout>
</LinearLayout>
