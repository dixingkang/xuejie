<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huihui"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ebe"
        android:background="@drawable/yebj"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sw"
                    android:background="@drawable/fh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bai"
                    android:textSize="20dp"
                    android:text="我的余额"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/btton"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前余额"/>
            <LinearLayout
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="@dimen/ls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:textSize="@dimen/ss"
                    android:text="0.00"/>
                <TextView
                    android:layout_marginTop="@dimen/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:textColor="@color/hongse"
                    android:text="元"/>
            </LinearLayout>
            <Button
                android:id="@+id/but_withdraw"
                android:layout_marginTop="@dimen/es"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws"
                android:layout_marginLeft="@dimen/esw"
                android:layout_marginRight="@dimen/esw"
                android:background="@drawable/button_cerise"
                android:textColor="@color/bai"
                android:textSize="@dimen/esw"
                android:text="提现"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
