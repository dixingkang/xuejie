<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huihui"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/eb"
        android:orientation="horizontal"
        android:background="@color/bai">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ybe"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cz"/>
            </LinearLayout>
           <TextView
               android:layout_marginTop="@dimen/ten"
               android:layout_marginLeft="@dimen/ten"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/es"
               android:text="橙子"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text="18"/>
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tj"/>
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_marginRight="@dimen/five"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:textSize="@dimen/esw"
                    android:text="2"/>
                <ImageView
                    android:id="@+id/iv_reduce"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/five"
                    android:layout_toLeftOf="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/js"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="@dimen/five"
            android:layout_height="match_parent"
            android:background="@color/huihui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ybe"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cz"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/es"
                android:text="橙子"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text="¥"/>
                <TextView
                    android:layout_marginLeft="@dimen/five"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hongse"
                    android:text=" 20"/>
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tj"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_marginRight="@dimen/five"
                    android:layout_toLeftOf="@+id/iv1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/esw"
                    android:textColor="@color/hongse"
                    android:text="3"
                    />
                <ImageView
                    android:layout_toLeftOf="@+id/tv2"
                    android:layout_marginRight="@dimen/five"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/js"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/five"/>
</LinearLayout>
