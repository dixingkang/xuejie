<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.dafen.xuejie.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:id="@+id/rl_fruit"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/ebs">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/ebs"
                   android:background="@drawable/timg"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_marginTop="50dp"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/ybs"
                       android:gravity="center"
                       android:orientation="vertical">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:background="@drawable/bt"
                           android:orientation="vertical">
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical">
                               <EditText
                                   android:id="@+id/et_input"
                                   android:layout_marginTop="@dimen/ten"
                                   android:layout_gravity="center_horizontal"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="鲜果缤纷"/>
                               <TextView
                                   android:layout_gravity="center_horizontal"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:textColor="@color/black"
                                   android:textSize="@dimen/ss"
                                   android:text="补水补维C"/>
                               <TextView
                                   android:layout_marginTop="@dimen/ten"
                                   android:layout_gravity="center_horizontal"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:textSize="@dimen/es"
                                   android:textColor="@color/qianhei"
                                   android:text="果园直供"/>
                           </LinearLayout>
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/es"
                   android:layout_alignParentBottom="true"
                   android:background="@drawable/heitiao"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_marginLeft="@dimen/ten"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/bai"
                       android:text="公告:"/>
                   <EditText
                       android:id="@+id/et_adv"
                       android:singleLine="true"
                       android:maxLength="12"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@null"
                       android:textColorHint="@color/bai"
                       android:hint="12345678"/>
               </LinearLayout>
           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/ws"
               android:background="@color/bai"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="2"
                   android:gravity="center"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/tv_drop"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/es"
                       android:text="全部分类"/>
                   <ImageView
                       android:layout_marginLeft="@dimen/seven"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/big_jiantou"/>
               </LinearLayout>
               <View
                   android:layout_marginTop="@dimen/ten"
                   android:layout_width="1dp"
                   android:layout_height="@dimen/ss"
                   android:background="@color/hui"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/tv_sales"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:textSize="@dimen/es"
                       android:text="销量"/>
                   <View
                       android:layout_marginTop="@dimen/ten"
                       android:layout_width="1dp"
                       android:layout_height="@dimen/ss"
                       android:background="@color/hui"/>
                   <TextView
                       android:id="@+id/tv_cost"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:textSize="@dimen/es"
                       android:text="价格"/>
               </LinearLayout>
           </LinearLayout>
           <com.dafen.xuejie.view.MyList
               android:id="@+id/lv_fruit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </com.dafen.xuejie.view.MyScrollView>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fh"/>
        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/transparent"
            android:textSize="@dimen/es"
            android:text="水果"/>
    </RelativeLayout>
</RelativeLayout>
