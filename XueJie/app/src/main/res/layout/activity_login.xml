<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huihui"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hongse">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sw"
                android:background="@drawable/fh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bai"
                android:textSize="20dp"
                android:text="登录"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/sw"
        android:layout_marginRight="@dimen/sw"
        android:layout_marginTop="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yb"
        android:orientation="vertical"
        android:background="@color/bai">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="@dimen/ss"
                android:layout_height="@dimen/ss"
                android:background="@drawable/sj"/>
            <EditText
                android:id="@+id/et_tel"
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:hint="手机号"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huihui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="@dimen/ss"
                android:layout_height="@dimen/ss"
                android:background="@drawable/ys"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_marginLeft="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="密码"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/but_loginto"
        android:layout_marginLeft="@dimen/sw"
        android:layout_marginRight="@dimen/sw"
        android:layout_marginTop="@dimen/es"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws"
        android:background="@drawable/sum_btton"
        android:textColor="@color/bai"
        android:textSize="@dimen/es"
        android:text="登录"/>

    <LinearLayout
        android:layout_marginTop="@dimen/es"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hongse"
            android:text="注册账号"/>
        <ImageView
            android:layout_marginLeft="@dimen/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dbx"/>
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_marginLeft="@dimen/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hongse"
            android:text="忘记密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/ybl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bs"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_WeChat_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginLeft="@dimen/esw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weixin"/>
            <TextView
                android:layout_marginLeft="@dimen/esw"
                android:layout_marginTop="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/es"
            android:layout_width="1dp"
            android:layout_height="@dimen/forty"
            android:background="@color/hui"/>
        <LinearLayout
            android:id="@+id/ll_qq_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginRight="@dimen/esw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qq"/>
            <TextView
                android:layout_marginRight="@dimen/esw"
                android:layout_marginTop="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
